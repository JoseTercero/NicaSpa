<a href="/admin/treatment/addForm"><input
    type="button"
    value="Add Treatment"
    class="btn btn-primary"
  /></a><br /><br />
{{#if treatments}}
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title text-uppercase mb-0">Manage Treatments</h5>
          </div>
          <div class="table-responsive">
            <table class="table no-wrap user-table mb-0">
              <thead>
                <tr>
                  <th
                    scope="col"
                    class="border-0 text-uppercase font-medium pl-4"
                  >#</th>
                  <th
                    scope="col"
                    class="border-0 text-uppercase font-medium"
                  >Name</th>
                  <th
                    scope="col"
                    class="border-0 text-uppercase font-medium"
                  >Description</th>
                  <th
                    scope="col"
                    class="border-0 text-uppercase font-medium"
                  >Price</th>
                  <th
                    scope="col"
                    class="border-0 text-uppercase font-medium"
                  >Added</th>
                </tr>
              </thead>
              <tbody>
                {{#each treatments}}
                  <tr>
                    <td class="pl-4">{{inc @index}}</td>
                    <td>
                      <h5 class="font-medium mb-0">{{name}}</h5>
                    </td>
                    <td>
                      <span class="text-muted">{{description}}</span><br />
                    </td>
                    <td>
                      <span class="text-muted">${{price}}</span><br />
                    </td>
                    <td>
                      <span class="text-muted">{{#toDate
                          createdAt
                        }}{{/toDate}}</span><br />
                    </td>
                    <td>
                      <a
                        href="/admin/treatments/{{_id}}/delete"
                        class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"
                      ><i class="fa fa-trash"></i></a>
                      <a
                        href="/admin/treatments/{{_id}}/edit"
                        class="btn btn-outline-info btn-circle btn-lg btn-circle ml-2"
                      ><i class="fa fa-edit"></i></a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
{{/if}}